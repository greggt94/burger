<h2>Add a Burger</h2>
<form class="create-form" action="/burgers">
  <div class="form-group">
    <label>Burger Name:</label>
    <input type="text" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<div class="burger-list">
  <hr>
  <label>Burgers</label>
  <ul>
    {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{burger_name}}
      </li>
    {{/unless}}
    {{/each}}
</ul>
</div>

